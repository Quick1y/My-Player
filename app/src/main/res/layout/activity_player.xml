<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.nikita.myplayer.PlayerActivity"
    android:background="@color/primaryBackground">

    <ImageView
        android:id="@+id/activity_player_album_image"
        android:background="@color/additionalBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primaryBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/activity_player_trackName_text"
                android:textSize="10pt"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Interesting audiobook #1"/>

            <TextView
                android:id="@+id/activity_player_albumName_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Interesting album #1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_player_currtime_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                tools:text="00:00:00" />

            <TextView
                android:id="@+id/activity_player_durtime_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="end"
                tools:text="00:00:00"/>

        </LinearLayout>


        <SeekBar
            android:id="@+id/activity_player_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="6dp">


            <ImageButton
                android:id="@+id/activity_player_rewind_back_button"
                android:background="@color/primaryBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_replay_10_black"
                android:layout_weight="20"/>

            <ImageButton
                android:id="@+id/activity_player_previous_button"
                android:background="@color/primaryBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_fast_rewind_black"
                android:layout_weight="20"/>

            <ImageButton
                android:id="@+id/activity_player_play_button"
                android:background="@drawable/playbutton_circle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                tools:src="@drawable/ic_pause"/>

            <ImageButton
                android:id="@+id/activity_player_next_button"
                android:background="@color/primaryBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_fast_forward_black"
                android:layout_weight="20"/>

            <ImageButton
                android:id="@+id/activity_player_rewind_forward_button"
                android:background="@color/primaryBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_forward_10_black"
                android:layout_weight="20"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/activity_player_speed_button"
                android:background="@null"
                tools:text="1.0x"
                android:text="1.0x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="25"/>

            <ImageButton
                android:id="@+id/activity_player_seekTo_button"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_seekto_black"
                android:layout_weight="25"/>

            <ImageButton
                android:id="@+id/activity_bookmark_button"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bookmark_border_black"
                android:layout_weight="25"/>

            <ImageButton
                android:id="@+id/activity_volume_button"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_volume_black"
                android:layout_weight="25"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
