<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Settings.SettingsActivity">

    <TextView
        android:id="@+id/fsi_source_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"

        android:textSize="16sp"
        android:text="@string/fsi_source_text"
        android:textColor="@color/textDark"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fsi_sources_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fsi_source_text">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/fsi_list_is_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fsi_list_is_empty"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fsi_fab_add"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"

        android:src="@drawable/ic_add" />

</RelativeLayout>