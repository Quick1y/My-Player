<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikita.myplayer.UI.Home.HomeActivity">

    <include android:id="@+id/include"
        layout="@layout/action_bar_home_activity"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fltl_recycler_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="20pt"
        android:layout_above="@+id/fltl_current_track_fl"
        android:layout_below="@+id/include">
    </android.support.v7.widget.RecyclerView>

    <FrameLayout
        android:id="@+id/fltl_current_track_fl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Текущий трек"/>

    </FrameLayout>


</RelativeLayout>
